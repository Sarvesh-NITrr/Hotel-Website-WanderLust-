<% layout("layouts/boilerplate.ejs") -%>

<h1>All Listings</h1>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListing) {%>
        <a href="/list/<%=listing._id%>" class="listing-link">
            <div class="card listing-card" style="min-height: 20rem;">
                <img src="<%=listing.image%>" class="card-img-top" style="height: 20rem;" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b> <br>
                        &#8377; <%=listing.price.toLocaleString("en-IN")%> / night <br>
                        <b><%=listing.location%> </b>
                    </p>
                </div>
            </div>
        </a>
    <%}%>
</div>


<a href="/list/new"><button >Add New Location</button></a>
   