<% layout("layouts/boilerplate.ejs") -%>
<br>
    <div class="row">
        <div class="col-8 offset-3">
            <h3><%=prop.title%></h3>
        </div>
        <div class="card col-5 offset-3 show-card listing-card">
            <img src="<%=prop.image%>" alt="listing-image" class="card-img-top show-img">
            <div class="card-body">
                <p class="card-text">Owned by : <%= prop.owner.username %></p>
                <p class="card-text"><%=prop.description%></p> 
                <p class="card-text">&#8377; <%=prop.price.toLocaleString("en-IN")%> / night </p>
                <p class="card-text"><%=prop.country%></p>
                <p class="card-text"> <%=prop.location%> </p>
        </div>
    </div>
</div>
<!-- currUser exist bhi krna chahiye -->
<% if(currUser && prop.owner.equals(currUser._id)){ %>
    <div class="col offset-3">
        <a href="/list/<%=prop._id%>/edit"><button class="btn btn-dark show-btn">Update</button></a>
        <form method="POST" action="/list/<%=prop.id%>?_method=DELETE" style="display: inline-block; margin-left: 15px;">
            <button type="submit" class="btn btn-dark" >Delete</button>
        </form>
    </div>
    <br><br>
<% } %>
<div class="col-8 offset-3 mb-3">
    <% if(currUser){ %>
        <hr/>
        <h4>Leave a Review</h4>
        <form method="post" novalidate class="needs-validation" action="/list/<%=prop.id%>/reviews">
            Rating : 
            <div class="mb-3 mt-3">
            <fieldset class="starability-coinFlip">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="second-rate1" name="review[rating]" value="1" />
                <label for="second-rate1" title="Terrible">1 star</label>
                <input type="radio" id="second-rate2" name="review[rating]" value="2" />
                <label for="second-rate2" title="Not good">2 stars</label>
                <input type="radio" id="second-rate3" name="review[rating]" value="3" />
                <label for="second-rate3" title="Average">3 stars</label>
                <input type="radio" id="second-rate4" name="review[rating]" value="4" />
                <label for="second-rate4" title="Very good">4 stars</label>
                <input type="radio" id="second-rate5" name="review[rating]" value="5" />
                <label for="second-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-lable">Comment :</label>
                <textarea required cols="30" rows="5" name="review[comment]" id="comment" class="form-control"></textarea>
                <div class="valid-feedback">Please fill genuine review</div>
                <div class="invalid-feedback">Comment is required!!</div>
            </div>
            <button  class="btn btn-outline-dark">Submit</button>
        </form>
    <% } %>
    <hr>
    <h4>All Reviews</h4>
    <div class="row">
        <%for(review of prop.reviews){%>
        <div class="card col-5 ms-3 review-card mb-3">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-body-secondary"><%= review.author.username %></h6>
                <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                <p class="card-title"><%=review.comment%></p>
                <form method="POST" action="/list/<%=prop.id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button type="submit" class="btn btn-primary revdelbtn">Delete</button>
                </form>
            </div>
        </div>
        <%}%>
    </div>
</div>