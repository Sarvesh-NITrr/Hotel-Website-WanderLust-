<% layout("layouts/boilerplate.ejs") -%>
<br>
    <div class="row">
        <div class="col-8 offset-3">
            <h3><%=prop.title%></h3>
        </div>
        <div class="card col-5 offset-3 show-card listing-card">
            <img src="<%=prop.image%>" alt="listing-image" class="card-img-top show-img">
            <div class="card-body">
                <p class="card-text">
                    <%=prop.description%> <br> <br>
                    &#8377; <%=prop.price.toLocaleString("en-IN")%> / night <br>
                    <%=prop.country%> <br>
                    <%=prop.location%> <br>
                </p>
        </div>
    </div>
</div>

<div class="col offset-3">
    <a href="/list/<%=prop._id%>/edit"><button class="btn btn-dark show-btn">Update</button></a>
    <form method="POST" action="/list/<%=prop.id%>?_method=DELETE" style="display: inline-block; margin-left: 15px;">
        <button type="submit" class="btn btn-dark" >Delete</button>
    </form>
</div>
<br><br>

<div class="col-8 offset-3 mb-3">
    <hr/>
    <h4>Leave a Review</h4>
    <form method="post" novalidate class="needs-validation" action="/list/<%=prop.id%>/reviews">
        <div class="mb-3 mt-3">
            <label for="review" class="form-lable">Rating :</label>
            <input required type="range" min="1" max="5" name="review[rating]" id="review">
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-lable">Comment :</label>
            <textarea required cols="30" rows="5" name="review[comment]" id="comment" class="form-control"></textarea>
            <div class="valid-feedback">Please fill genuine review</div>
            <div class="invalid-feedback">Comment is required!!</div>
        </div>
        <button  class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <h4>All Reviews</h4>
    <div class="row">
        <%for(review of prop.reviews){%>
        <div class="card col-5 ms-3 review-card mb-3">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-body-secondary">Username</h6>
                <h5 class="card-title"><%=review.rating%> Stars</h5>
                <p class="card-text"><%=review.comment%></p>
                <form method="POST" action="/list/<%=prop.id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button type="submit" class="btn btn-primary revdelbtn">Delete</button>
                </form>
            </div>
        </div>
        <%}%>
    </div>
</div>